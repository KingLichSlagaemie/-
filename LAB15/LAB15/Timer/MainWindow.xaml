<Window x:Class="Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Focus Timer" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Focus Timer" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48"/>

        <TextBlock x:Name="TimeBlock" Grid.Row="1" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Text="25:00" FontSize="48"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="StartButton" Content="Старт" Height="38" Width="89" Click="StartButton_Click"/>
            <Button Content="Сброс" Height="38" Width="83" Click="ResetButton_Click" Margin="20,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Продолжительность:" VerticalAlignment="Center"/>
            <ComboBox x:Name="DurationComboBox" Width="71" Margin="10,0,10,0">
                <ComboBoxItem Content="15" IsSelected="False"/>
                <ComboBoxItem Content="25" IsSelected="True"/>
                <ComboBoxItem Content="45"/>
            </ComboBox>
            <Label Content="мин." VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>